# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/retail-agentic
MONGODB_DATABASE=retail-agentic

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Elasticsearch Configuration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200

# PostgreSQL Configuration (if needed for payments)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=retail-agentic
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=postgres

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRATION_MS=3600000

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_APP=DEBUG

# Multi-tenant Configuration
TENANT_RESOLUTION_STRATEGY=subdomain
TENANT_BASE_DOMAIN=localhost

# File Upload
MAX_FILE_SIZE_MB=10
UPLOAD_DIR=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@retail-agentic.com

# Payment Gateway (Stripe example)
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
